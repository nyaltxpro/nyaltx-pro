# Pump.fun Token Creation API Keys
PUMP_PORTAL_API_KEY=your-pump-portal-api-key-here
SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com

# Optional: For custom RPC endpoints
# SOLANA_RPC_ENDPOINT=https://solana-mainnet.g.alchemy.com/v2/your-api-key
# SOLANA_RPC_ENDPOINT=https://rpc.ankr.com/solana

# Environment
NODE_ENV=development

# PayPal Configuration
# Get these from https://developer.paypal.com/
# For the React SDK, only the client ID needs to be public
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-client-id-here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Twitch API Configuration
NEXT_PUBLIC_TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here
NEXT_PUBLIC_TWITCH_REDIRECT_URI=http://localhost:3000/auth/twitch/callback

# Base URL for your application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Email Configuration (Nodemailer)
# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here

# Email addresses
FROM_EMAIL=noreply@nyaltx.io
ADMIN_EMAIL=admin@nyaltx.io

# For Gmail, you need to:
# 1. Enable 2-factor authentication
# 2. Generate an "App Password" (not your regular password)
# 3. Use the app password in SMTP_PASS

# Crypto Payment Configuration (Mainnet Ethereum)
NEXT_PUBLIC_PAYMENT_CHAIN_ID=1
NEXT_PUBLIC_PAYMENT_RECEIVER_ADDRESS=0x81bA7b98E49014Bff22F811E9405640bC2B39cC0
NEXT_PUBLIC_NYAX_TOKEN_ADDRESS=0x5eed5621b92be4473f99bacac77acfa27deb57d9
NEXT_PUBLIC_FALLBACK_ETH_PRICE=3000
